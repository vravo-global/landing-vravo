---
import logo_orizen from '../../assets/logos/logo_orizen.png'
---
<section class="bg-white h-96 p-8">
    <div class="flex flex-col h-full items-center justify-around">
        <div class="flex flex-col justify-center items-start gap-y-2">
            <div class="bg-primary rounded-full items-center justify-center">
                <p
                    class="text-white font-normal text-xl px-6 py-1 rounded-full flex items-center"
                >
                    Soluciones
                </p>
            </div>
        </div>
        <div class="flex flex-col justify-center items-start gap-y-2 py-8">
            <div class="md:w-full md:h-40">
                <a href="http://orizen.cl" target="_blank">
                <img
                    src={logo_orizen.src}
                    alt="Logo Orizen"
                    class="h-full w-full object-cover"
                />
                </a>
            </div>
        </div>
    </div>
</section>